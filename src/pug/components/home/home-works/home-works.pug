                                <path d="M1 8L8 1M1 8H21M1 8L8 15" stroke="white"/>
                            </svg>
                        button.btn.circle.work-next 
                            <svg width="21" height="16" viewBox="0 0 21 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M20 8L13 1M20 8H0M20 8L13 15" stroke="white"/>
                            </svg>
                .home-works-swiper 
                    .swiper-wrapper 
                        +portfolio-card({class: 'swiper-slide', title: 'Визитные карточки', badgeTitle: 'Визитки', img: './img/portfolio/1.jpg'})
                        +portfolio-card({class: 'swiper-slide', title: 'Папка', badgeTitle: 'Полиграфия для офиса', img: './img/portfolio/2.jpg'})
                        +portfolio-card({class: 'swiper-slide', title: 'Энергетический напиток Red Bull', badgeTitle: 'Упаковка и POS', img: './img/portfolio/3.jpg'})
                        +portfolio-card({class: 'swiper-slide', title: 'Визитные карточки', badgeTitle: 'Визитки', img: './img/portfolio/1.jpg'})
