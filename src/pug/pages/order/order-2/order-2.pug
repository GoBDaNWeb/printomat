mixin order-page-2()

	.order 
		.container 
			.order__head 
				h1 Оформление заказа
			.order__nav.order__nav-2 
				.order__nav__item.done
					p Параметры заказа
				.order__nav__item.done
					p Контакты
				.order__nav__item.active 
					p Доставка
				.order__nav__item 
					p Оплата
			.order__body 
				form.form.order__left 
					h6 Данные получателя
					+checkbox('Данные получателя совпадают с контактным лицом')
					.input__row 
						label.field-wrap
							span Имя *
							input.input__valid-name.req(type="text", placeholder="Введите") 
						.input__item-small
					.double-field
						.input__row 
							label.field-wrap
								span Телефон *
								input.input__valid-phone(type="tel", placeholder="Введите") 
							.input__item-small 
						.input__row 
							label.field-wrap
								span Почта *
								input.input__valid-email(type="text", placeholder="Введите") 
							.input__item-small
					.order__delivery.tabs-wrapper 
						h6 Выбор типа доставки
						.order__delivery__radios 
							label.radio-btn.tab.active(data-tab="1") 
								input(type="radio" name='delivery' value='pickup' checked='checked')
								span Самовывоз из офиса
							label.radio-btn.tab(data-tab="2") 
								input(type="radio" name='delivery' value='pvz')
								span До пункта выдачи
							label.radio-btn.tab(data-tab="3") 
								input(type="radio" name='delivery' value='courier')
								span Курьером
						
						.order__delivery__content.tab-content(data-delivery="pickup", data-tab="1")
							p
								b Забрать готовый заказ в офисе по адресу:
								span г. Москва, Нижний Сусальный пер., 9 стр. 6. Станция метро Курская.
							br
							p Обратите внимание, что въезд на территорию бизнес центра платный 
								b - 200 руб./час.
							.order__delivery__pickup 
								p 
									b Вы можете забрать готовый заказ самостоятельно в офисе Printomat с понедельника по пятницу в следующие часы:

								ul.list 
									li В день готовности Вашего заказа с 18:00 до 20:00 (СуперЭкспресс и Экспресс)
									li В день готовности Вашего заказа с 10:00 до 20:00 (Стандарт и Эконом)
									li В последующие дни с 10:00 до 20:00
						.order__delivery__content.tab-content.hidden(data-delivery="pvz", data-tab="2")
							.order__delivery__boxes
								label.radio-btn.radio-btn-pic
									img(src="./img/cdek.png", alt="")
									input(type="radio" name="delivery-method1" checked)
									span CDEK 
								label.radio-btn.radio-btn-pic
									img(src="./img/boxberry.png", alt="")
									input(type="radio" name="delivery-method1")
									span Boxberry 
								label.radio-btn.radio-btn-pic
									img(src="./img/yandexgo.png", alt="")
									input(type="radio" name="delivery-method1")
									span Яндекс 
							p К дате готовности прибавятся дни доставки. Расчетное время доставки можно увидеть после указания города и пункта выдачи заказа.

							.order__delivery__pvz-fields 
								label.field-wrap
									span Город
									+selector({
										class: 'product-selector',
										title: 'Выберите', 
										items: [
											{
												title: 'Все', 
												value: 0
											},
											{
												title: 'Тут написать', 
												value: 1
											},
											{
												title: 'Тут написать 1', 
												value: 2
											},
											{
												title: 'Тут написать 2', 
												value: 3
											},
											{
												title: 'Тут написать 3', 
												value: 4
											},
											{
												title: 'Тут написать 4', 
												value: 5
											},],
											name: 'city'
										},)
								label.field-wrap
									span Пункт выдачи
									+selector({
										class: 'product-selector',
										title: 'Выберите', 
										items: [
											{
												title: 'Все', 
												value: 0
											},
											{
												title: 'Тут написать', 
												value: 1
											},
											{
												title: 'Тут написать 1', 
												value: 2
											},
											{
												title: 'Тут написать 2', 
												value: 3
											},
											{
												title: 'Тут написать 3', 
												value: 4
											},
											{
												title: 'Тут написать 4', 
												value: 5
											},],
											name: 'pvz'
										},)
								button.order__delivery__pvz-fields__btn Выбрать пункт на карте
								p 2-12 рабочих дней после дня готовности по городам России.
								.field-wrap 
									span Комментарий
									textarea(placeholder="Комментарий") 
								.order__left__total 
									p.little Стоимость доставки (включая налог)
										span 1 000 ₽
									p Итого
										span 19 720 ₽

						.order__delivery__content.tab-content.hidden(data-delivery="courier", data-tab="3")
							.order__delivery__boxes
								label.radio-btn.radio-btn-pic
									img(src="./img/cdek.png", alt="")
									input(type="radio" name="delivery-method" checked)
