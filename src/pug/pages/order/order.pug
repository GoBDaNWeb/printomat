mixin order-page()

	.order 
		.container 
			.order__head 
				h1 Оформление заказа
			.order__nav.order__nav-1 
				.order__nav__item.done
					p Параметры заказа
				.order__nav__item.active 
					p Контакты
				.order__nav__item
					p Доставка
				.order__nav__item 
					p Оплата
			.order__body 
				form.form.order__left 
					h6 С кем нам связаться, если возникнут вопросы по заказу
					.input__row 
						label.field-wrap
							span Имя *
							input.input__valid-name.req(type="text", placeholder="Введите") 
						.input__item-small
					.double-field
						.input__row 
							label.field-wrap
								span Телефон *
								input.input__valid-phone(type="tel", placeholder="Введите") 
							.input__item-small 
						.input__row 
							label.field-wrap
								span Почта *
								input.input__valid-email(type="text", placeholder="Введите") 
							.input__item-small
					label.field-wrap
						span Комментарий
						textarea(placeholder="Комментарий")
					.order__left__bottom 
						a.btn.tab.outline(href="#") Назад
						button.btn.primary Далее 
				.order__right
					h6 Ваш заказ
						<svg width="20" height="12" viewBox="0 0 20 12" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M19 11L10 0.999999L1 11" stroke="#2C2C2C"/>
						</svg>

					.order__right__items 
						.order__right__item 
							.order__right__item__head 
								button.order__right__item__name 
									<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path d="M1 5L10 15L19 5" stroke="#2C2C2C"/>
									</svg>
									span Наклейки
								button.order__right__item__remove(data-modal-target="delete-product")  
									<svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
										<rect width="28" height="28" rx="14" transform="matrix(-1 0 0 1 28 0)" fill="#EEEEEE"/>
										<path d="M18.2435 9.75736L14.0009 14M14.0009 14L9.75827 18.2426M14.0009 14L9.75827 9.75736M14.0009 14L18.2435 18.2426" stroke="#2C2C2C"/>
									</svg>
							.order__right__item__body 
								div.hide Тираж
									+selector({
										class: 'product-selector',
										title: 'Тираж', 
										items: [
											{
												title: '500 шт.', 
												value: 0
											},
											{
												title: '1000 шт.', 
												value: 1
											},
											{
												title: '1500 шт.', 
												value: 2
											},
											],
											name: 'count'
										},)
								div.hide Тариф
									+selector({
										class: 'product-selector',
										title: 'Тариф', 
										items: [
											{
												title: 'Эконом', 
												value: 0
											},
											{
